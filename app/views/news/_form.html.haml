= form_for @news_item do |f|
  -if @news_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@news_item.errors.count, "error")} prohibited this news item from being saved:"
      %ul
        - @news_item.errors.full_messages.each do |msg|
          %li= msg
  .field
    %p
      %b= f.label "Tytuł"
    = f.text_field :title
  .field
    %p
      %b= f.label "Treść"
    = f.text_area :content
  .actions
    = f.submit 'Dodaj'
