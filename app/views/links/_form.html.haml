= form_for @link do |f|
  - if @link.errors.any?
    #error_explanation
      %h2= "#{pluralize(@link.errors.count, "error")} prohibited this link from being saved: "
      %ul
        - @link.errors.full_messages.each do |msg|
          %li= msg
  .field
    %p
      %b= f.label "Tytuł"
    = f.text_field :title
  .field
    %p
      %b= f.label "Url"
    = f.text_field :url
  .field
    %p
      %b= f.label "Opis (nieobowiązkowy)"
    = f.text_field :description
  .actions
    = f.submit 'Dodaj'
